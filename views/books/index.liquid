{% layout "layout.liquid" %} {% block content %}
    <div>
        {% comment %} <a href="/books/new"><button>Create A New Fruit</button></a> {% endcomment %}
        <a href="/users/logout"><button>Logout</button></a>

        {% for book in books %}
            <article>
                <a href="/books/{{ book._id }}">
                <h2>
                    {% comment %} {{book.name}} - {% if book.readyToEat == true %} Ripe 
                    {% else %} 
                    Not Ripe 
                    {% endif %} {% endcomment %}
                    <form action="/books" method="POST">
                        Title: <input type="text" name="title"><br>
                        Author: <input type="text" name="author"><br>
                        Series: <input type="text" name="series"><br>

                        {% comment %} Has Read: <input type="checkbox" name="readyToEat"><br> {% endcomment %}
                    </form>
                </h2>
                </a>
            </article>
        {% endfor %}
    </div>
{% endblock %}
