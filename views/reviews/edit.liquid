{% layout "layout.liquid" %} {% block content %}
    <div>
        <h1 class="fw-bolder mb-1">Reviews</h1>    

        <article>
            <h2>Username: {{ reviews.username }}</h2>
           
            <h3>Rating: {{ reviews.rating }}</h3>
            <h3>
                <div>
                REview: {{ reviews.reviewBody }}
            </div>     
            <form action="/reviews/show" method="post">       

                    <input type="submit" value="Edit Review" class="btn btn-primary"/>
                    {% comment %} {% if review.library == true %} submit {% endif %} {% endcomment %}
                    {% comment %} <fieldset>
                </fieldset> {% endcomment %}
            
            </form>
            <form action="/reviews/{{ reviews._id }}?_method=DELETE" method="POST">
                <input class="btn btn-primary" type="submit" value="Delete" />
            </form>    
            <br><br>
               
            <a href="/reviews/" type="button" class="btn btn-primary">Back to Main</a>
        </article>
    </div>
{% endblock %}
