{% layout "layout.liquid" %} {% block content %}
    <div>
        <h1 class="fw-bolder mb-1">Reviews</h1>    
 
        <article>
            <h2>{{ reviews.username }}</h2>
           
            <h3>{{ reviews.rating }}</h3>
            <h3>
                <div>
                {{ reviews.reviewBody }}
            </div>     
            <form action="/reviews/show" method="post">       

                    <input type="submit" value="Edit Review" class="btn btn-primary"/>
                    {% comment %} {% if review.library == true %} submit {% endif %} {% endcomment %}
                    {% comment %} <fieldset>
                </fieldset> {% endcomment %}
            

            <a href="/reviews/{{ reviews._id }}/edit"><button>Delete</button></a>
            <br><br>
               
            <a href="/reviews/" type="button" class="btn btn-primary">Back to Main</a>
        </article>
    </div>
{% endblock %}
