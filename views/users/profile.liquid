{% layout "layout.liquid" %}
{% block content %}
<div>
  <article>
    <h1 class="fw-bolder mb-1">Profile Page</h1>
    <div>
      Username:
      {{ users.username }}
      <br>
    </div>
    
    {% comment %} <div>
      Bookshelf:
      {{users.hasRead}} 
    </div> {% endcomment %}
    {% comment %} <h2>
      {{ user.name }} -

      {% comment %} {% if hasRead == true %}
      clicked
     
      {% endif %}
    </h2>{% endcomment %}

    {% comment %} <a href="/users/{{ users._id }}/edit"><button>Edit</button></a> {% endcomment %}

    {% comment %} <a href="/users/"><button>Back to Main Button</button></a> {% endcomment %}
  </article>
</div>
<br><br>
{% endblock %}